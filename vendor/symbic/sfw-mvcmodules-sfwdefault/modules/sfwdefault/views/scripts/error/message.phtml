<?php
$t = $this->translator;

if (!isset($this->typeConfig) || !is_array($this->typeConfig))
{
	$this->typeConfig = array();
}

if (empty($this->typeConfig['pageTitle']))
{
	$this->typeConfig['pageTitle'] = 'Application Error Message';
}
$this->headTitle($t->_($this->typeConfig['pageTitle']), 'PREPEND');

if (!empty($this->typeConfig['headline']))
{
	echo '<h1>' . $this->escape($t->_($this->typeConfig['headline'])) . '</h1>';
}

if (!isset($this->typeConfig['display']))
{
	echo '<div>' . $this->escape($t->_('An application error occured.')) . '</div>';
	return;
}

if (!empty($this->response['title']))
{
	echo '<h2>' . $this->escape($t->_($this->response['title'])) . '</h2>';
}

echo 'Error: ' . $this->escape($t->_($this->response['message']));