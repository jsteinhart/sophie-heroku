<?php
$this->headLink()->appendStylesheet($this->sfwModuleAssetUrl('module.css', 'sfwlogin'));
$this->inlineScript()->appendFile($this->sfwModuleAssetUrl('module.js', 'sfwlogin'));

$t = $this->translator;
$pageTitle = $t->_('##forgotPasswordPageTitle##');
$headline = $t->_('##forgotPasswordHeadline##');

if ($pageTitle != '')
{
	$this->headTitle($pageTitle, 'PREPEND');
}

if ($headline != '')
{
	$this->form->setLegend($headline);
}
?>

<?php
if(!$this->success)
{
	echo $this->form;
}
else
{
	echo '<div class="alert alert-info">Your password has been updated successfully.<br /><br />';
}

?>

<a href="<?php echo $this->url(array(), 'login', true); ?>"><?php echo $this->escape($t->_('Back to Login')); ?></a>