<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://phpdox.net/config">
	<project name="sfw-lib" source="${basedir}/lib" workdir="${basedir}/build/phpdox">

		<collector publiconly="false">
			<inheritance resolve="false"></inheritance>
			<include mask="*.php" />
			<exclude mask="*Autoload.php" />
		</collector>

		<generator output="build">
			<enrich base="${basedir}/build/logs">
				<source type="build" />
				<source type="phploc" />
				<source type="checkstyle" />
				<source type="pmd" />
			</enrich>

			<build engine="html" enabled="true" output="docs/api">
				<!-- ??? output="html" -->
				<file extension="html" />
			</build>
		</generator>
	</project>
</phpdox>